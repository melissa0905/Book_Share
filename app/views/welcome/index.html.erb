

<div class="jumbotron">
  <h1 >WELCOME BOOK SHARE SÄ°TE!!</h1>
</div>
<% if current_user.present? %>
  <p class="text">It's time to share a new book</p>
<%else%>
  <p class="text">If you want book share, register please !</p>
<%end%>
<hr>
<h1>BOOKS</h1>
 <div class="container-fluid">
 <div id="deneme">
   <div class="row center ml-5">
      <% @books.each do |book| %>
        <% user = User.find(book.user_id) %>
        <div class="card text-white bg-secondary m-5 col-4" style="min-width: 26rem;">
          <div class="card-header bg-dark font-weight-bold text-white rounded text-center pt-3">
            <% if current_user %>
              <%= link_to 'Show', book_path(book), class:"btn btn-info text-white" %>
            
            <%else%>
              <img src="/assets/books.gif" alt="book" style="width:20%" >
            <% end %>
          </div>
          
          <div class="card-body">   
            <p><p class="card-title font-weight-bold d-inline text-dark"> Title : </p><%= book.title %></p><hr>
            <p><p class="card-title font-weight-bold d-inline text-dark"> Author : </p><%= book.author %></p><hr>
            <p><p class="card-title font-weight-bold d-inline text-dark"> Username : </p><%= user.username %></p><hr>
            
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>